html
    head
        include partials/head.pug
    body(class="profile")
        include partials/header.pug
        main
            form(action="/updateProfile" method="POST" enctype="multipart/form-data")
                label(for="email") Email
                input(type="text" id="email" name="email" placeholder=`${user.email}`)
                label(for="username") Gebruikersnaam
                input(type="text" id="username" name="username" placeholder=`${user.username}`)
                label(for="password") Wachtwoord
                input(type="password" id="password" name="password" placeholder=`****`)
                label(for="profilePic") Profielfoto
                input(type="file" id="profilePic" name="profilePic" accept="img/*")
                input(type="submit" placeholder="Update")
